{
    // https://www.typescriptlang.org/tsconfig#compilerOptions
    "editor.tabSize": 4,
    "compilerOptions": {
        "module": "es2022",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "target": "es2022",
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types",
            "./src/data"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
